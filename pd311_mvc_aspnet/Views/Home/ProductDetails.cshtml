@model pd311_mvc_aspnet.Models.Product

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img width="530px" src="~/images/products/@(Model.Image ?? "default.png")" class="img-fluid product-image" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Код товару:</strong> @Model.Id</p>
            
            <p><strong>Ціна:</strong> <span class="text-danger">@Model.Price грн</span></p>
            <p><strong>В наявності:</strong> @Model.Amount шт.</p>

            <div class="d-flex">
                <button class="btn btn-success me-2">Купити</button>
                <button class="btn btn-outline-primary">Купити в кредит</button>
            </div>

            <div class="mt-3">
                <p class="text-muted">Безкоштовна доставка в поштомати та кур'єром</p>
            </div>
        </div>
        <strong>Опис:</strong> @Html.Raw(@Model.Description)
    </div>
</div>
